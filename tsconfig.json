{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@assets/*": ["app/assets/*"],
      "@constants/*": ["app/constants/*"],
      "@store/*": ["app/store/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
