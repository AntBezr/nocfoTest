{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@screens/*": ["app/screens/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["constants/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/store.d.ts"
  ]
}
